{
	"name": "gregrickaby/custom-theme",
	"description": "A custom theme.",
	"type": "wordpress-theme",
	"license": "MIT",
	"authors": [
		{
			"name": "Greg Rickaby",
			"email": "greg@gregrickaby.com"
		}
	],
	"config": {
		"platform": {
			"php": "8.0"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-cli/wp-cli-bundle": "^2.5",
		"wp-coding-standards/wpcs": "^2.3"
	},
	"scripts": {
		"format": "./vendor/bin/phpcbf --report=summary,source",
		"lint": "./vendor/bin/phpcs --report=summary,source",
		"pot": "./vendor/bin/wp i18n make-pot . build/custom.pot --exclude=node_modules,vendor,build --allow-root"
	}
}
